{
  "name": "pulina",
  "version": "0.2.0",
  "description": "IRC like chat server implementation",
  "license": "MIT",
  "homepage": "https://github.com/RauliL/pulina",
  "repository": {
    "type": "git",
    "url": "git@github.com:RauliL/pulina.git"
  },
  "bugs": {
    "url": "https://github.com/RauliL/pulina/issues"
  },
  "keywords": [
    "chat"
  ],
  "engines": {
    "node": "20 || >=22"
  },
  "scripts": {
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "style:check": "prettier --check './src/**/*.{ts,tsx}'",
    "style:format": "prettier --write './src/**/*.{ts,tsx}'",
    "start": "node ./dist/index.js",
    "start:dev": "concurrently 'webpack-cli --watch' 'nodemon --watch ./dist ./dist/index.js'",
    "test": "vitest",
    "build": "webpack-cli",
    "watch": "webpack-cli --watch",
    "clean": "rimraf './dist' './public/static'",
    "prebuild": "$npm_execpath run clean",
    "prepack": "cross-env NODE_ENV=production $npm_execpath run build"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "2.1.8",
    "classnames": "^2.5.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "happy-dom": "^15.11.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^9.2.0",
    "reactstrap": "^9.2.3",
    "redux": "^5.0.1",
    "redux-mock-store": "^1.5.5",
    "rimraf": "^6.0.1",
    "sass": "^1.83.0",
    "terser-webpack-plugin": "^5.3.11",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@fvilers/normalize-port": "^1.0.0",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "lodash": "^4.17.21",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.3"
  }
}
